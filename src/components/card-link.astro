---
const { link, plataform, sourceImg } = Astro.props;
---
<a href=`${link}` target="_blank" rel="noreferrer">{plataform} <img src=`${sourceImg.src}` width="20px" height="20px" alt=`logo de ${plataform}`/></a>

<style>
    a {
        font-size: 15px;
        font-weight: bold;
        border: solid #fff 3px;
        border-radius: 25px;
        padding: 7px 25px;
        color: #fff;
        display: inline-flex; 
        text-decoration: none;
        transition: background-color 0.3s ease-out;
        margin: 10px 5px;
    }
    a:hover {
        background-color: #025f3e;
    }
    img {
        margin-left: 15px;
    }

</style>